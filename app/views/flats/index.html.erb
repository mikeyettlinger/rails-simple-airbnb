<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-4 mt-4">
      <div class="flat-card">
        <div class="flat-card-content">
          <%= flat.name %>
          <%= flat.description %>
          <div class="flex">
            <div class="flex">
              <i class="material-icons mr-2">people</i>
              <span><%= flat.number_of_guests%></span>
            </div>
            <div class="flex ml-3">
              <i class="material-icons mr-2">euro_symbol</i>
              <span><%= flat.price_per_night%></span>
            </div>
          </div>
        </div>
        <div class="card-footer">
          Footer
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>

